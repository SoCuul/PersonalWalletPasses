{
    "compilerOptions": {
        "module": "NodeNext",
        "target": "ESNext",
        "rootDir": "src",
        "outDir": "dist",
        "strict": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "allowUnreachableCode": false,
    },
    "include": [
        "./**/*"
    ],
    "exclude": [
        "node_modules/**/*",
        "src/types/**/*",
        "dist/**/*"
    ]
}